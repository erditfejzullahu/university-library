generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  USER
  ADMIN
}

enum Status {
  IN_REVIEW
  ACCEPTED
}

enum BorrowedStatus {
  BORROWED
  RETURNED
}

enum EmailType {
  WELCOME
  REMINDER
  PASSWORD_RESET
}

model User {
  id String @id @default(uuid())
  fullName String
  password String
  email String @unique
  role Role @default(USER)
  status Status @default(IN_REVIEW)
  universityId Int @unique
  universityIdCard String
  profileImage String? @default("https://cdn.pixabay.com/photo/2015/03/04/22/35/avatar-659652_640.png")
  createdAt DateTime @default(now())
  lastActivity DateTime @default(now())

  borrowedBooks BorrowedBooks[]
  emails EmailSent[]
}

model Books {
  id String @id @default(uuid())
  title String @db.VarChar(150)
  author String
  genre String
  rating Float
  totalCopies Int
  availableCopies Int
  description String
  coverUrl String
  coverColor String
  videoUrl String
  summary String
  createdAt DateTime @default(now())

  borrowedBooks BorrowedBooks[]
}

model BorrowedBooks {
  id String @id @default(uuid())
  bookId String
  userId String
  status BorrowedStatus @default(BORROWED)
  borrowedAt DateTime @default(now())
  dueDate DateTime
  returnDate DateTime?

  book Books @relation(fields: [bookId], references: [id], onDelete: Cascade)
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([bookId, userId])
}

model EmailSent {
  id String @id @default(uuid())
  userId String
  from String
  to String
  type EmailType
  subject String
  message String
  createdAt DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}